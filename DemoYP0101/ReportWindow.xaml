<Window x:Class="DemoYP0101.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoYP0101"
        mc:Ignorable="d"
        Title="Отчеты" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="297*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>

        <TextBlock Name="FullUserName"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               Margin="0,10,20,0" Height="27" Width="0"/>

        <DataGrid x:Name="ReportGrid"
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" 
                                    Binding="{Binding UserName}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Адрес" 
                                    Binding="{Binding Adress}" 
                                    Width="200"/>
                <DataGridTextColumn Header="Квартира" 
                                    Binding="{Binding Flat}" 
                                    Width="80"/>
                <DataGridTextColumn Header="Период" 
                                    Binding="{Binding Period}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Начислено" 
                                    Binding="{Binding Accrued}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Оплачено" 
                                    Binding="{Binding Paid}" 
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>


        <Button x:Name="LogOutButton"
            Content="Назад"
            Grid.Row="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="20,0,0,0"
            Click="LogOutButton_Click" Height="31" Width="61"/>

        <Button x:Name="Remake"
    Content="Изменить"
    Grid.Row="2"
    VerticalAlignment="Center"
    HorizontalAlignment="Left"
    Margin="486,0,0,0"
    Click="Remake_Click" Height="31" Width="127"/>

        <Button x:Name="AddButton"
    Content="Добавить"
    Grid.Row="2"
    VerticalAlignment="Center"
    HorizontalAlignment="Left"
    Margin="637,0,0,0"
    Click="AddButton_Click" Height="31" Width="118"/>
        <Button x:Name="DeleteButton"
        Content="Удалить"
        Grid.Row="2"
        VerticalAlignment="Center"
        HorizontalAlignment="Left"
        Margin="371,0,0,0"
        Click="DeleteButton_Click" Height="31" Width="93"/>
    </Grid>
</Window>
