<Window x:Class="DemoYP0101.ListHousingStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoYP0101"
        mc:Ignorable="d"
        Title="Жилой фонд" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="297*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ListGrid"
          Grid.Row="1"
          Margin="10"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          IsReadOnly="True"
          SelectionMode="Single">
            <DataGrid.Columns>
                
                <DataGridTextColumn Header="Адрес" 
                            Binding="{Binding Adress}" 
                            Width="200"/>
                <DataGridTextColumn Header="Начало управления" 
                            Binding="{Binding Beginning}" 
                            Width="80"/>
                <DataGridTextColumn Header="Этажей" 
                            Binding="{Binding Floors}" 
                            Width="100"/>
                <DataGridTextColumn Header="Квартир" 
                            Binding="{Binding Flat}" 
                            Width="100"/>
                <DataGridTextColumn Header="Год" 
                            Binding="{Binding Year}" 
                            Width="100"/>
                <DataGridTextColumn Header="Плоцадь м2" 
                            Binding="{Binding Square}" 
                            Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button x:Name="LogOutButton"
    Content="Назад"
    Grid.Row="2"
    VerticalAlignment="Center"
    HorizontalAlignment="Left"
    Margin="20,0,0,0"
    Click="LogOutButton_Click" Height="31" Width="61"/>

        <Button x:Name="Remake"
    Content="Изменить"
    Grid.Row="2"
    VerticalAlignment="Center"
    HorizontalAlignment="Left"
    Margin="486,0,0,0"
    Click="Remake_Click" Height="31" Width="127"/>

        <Button x:Name="AddButton"
    Content="Добавить"
    Grid.Row="2"
    VerticalAlignment="Center"
    HorizontalAlignment="Left"
    Margin="637,0,0,0"
    Click="AddButton_Click" Height="31" Width="118"/>
        <Button x:Name="DeleteButton"
        Content="Удалить"
        Grid.Row="2"
        VerticalAlignment="Center"
        HorizontalAlignment="Left"
        Margin="371,0,0,0"
        Click="DeleteButton_Click" Height="31" Width="93"/>
    </Grid>
</Window>
