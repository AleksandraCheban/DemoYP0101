<Window x:Class="DemoYP0101.AddEditHousingStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoYP0101"
        mc:Ignorable="d"
        Title="Жилой фонд" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

            <!-- Адрес -->
            <TextBlock Text="Адрес:" Margin="0,5,0,2"/>
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10"/>

            <!-- Начало управления (дата) -->
            <TextBlock Text="Начало управления (дд.мм.гггг):" Margin="0,5,0,2"/>
            <DatePicker x:Name="BeginningDatePicker" Margin="0,0,0,10"
                       SelectedDateFormat="Short"/>

            <!-- Количество этажей -->
            <TextBlock Text="Количество этажей:" Margin="0,5,0,2"/>
            <TextBox x:Name="FloorsTextBox" Margin="0,0,0,10"/>

            <!-- Количество квартир -->
            <TextBlock Text="Количество квартир:" Margin="0,5,0,2"/>
            <TextBox x:Name="FlatTextBox" Margin="0,0,0,10"/>

            <!-- Год постройки -->
            <TextBlock Text="Год постройки:" Margin="0,5,0,2"/>
            <TextBox x:Name="YearTextBox" Margin="0,0,0,10"/>

            <!-- Площадь -->
            <TextBlock Text="Площадь (м²):" Margin="0,5,0,2"/>
            <TextBox x:Name="SquareTextBox" Margin="0,0,0,20"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Content="Отмена" 
                        Width="80" Height="30" Margin="5,0" 
                        Click="CancelButton_Click"/>
                <Button x:Name="SaveButton" Content="Сохранить" 
                        Width="80" Height="30" Margin="5,0" 
                        Click="SaveButton_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</Window>
