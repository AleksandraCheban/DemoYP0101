<Window x:Class="DemoYP0101.AddEditPaymentReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoYP0101"
        mc:Ignorable="d"
        Title="Отчет" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

            <!-- Владелец -->
            <TextBlock Text="Владелец:" Margin="0,5,0,2"/>
            <ComboBox x:Name="UserComboBox" Margin="0,0,0,10"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"/>

            <!-- Адрес -->
            <TextBlock Text="Адрес:" Margin="0,5,0,2"/>
            <ComboBox x:Name="AddressComboBox" Margin="0,0,0,10"
                      DisplayMemberPath="Adress"
                      SelectedValuePath="Id"/>

            <!-- Квартира -->
            <TextBlock Text="Квартира:" Margin="0,5,0,2"/>
            <TextBox x:Name="FlatTextBox" Margin="0,0,0,10"/>

            <!-- Период -->
            <TextBlock Text="Период (месяц.год):" Margin="0,5,0,2"/>
            <TextBox x:Name="PeriodTextBox" Margin="0,0,0,10"/>

            <!-- Начислено -->
            <TextBlock Text="Начислено:" Margin="0,5,0,2"/>
            <TextBox x:Name="AccruedTextBox" Margin="0,0,0,10"/>

            <!-- Оплачено -->
            <TextBlock Text="Оплачено:" Margin="0,5,0,2"/>
            <TextBox x:Name="PaidTextBox" Margin="0,0,0,20"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Content="Отмена" 
                        Width="80" Height="30" Margin="5,0" 
                        Click="CancelButton_Click"/>
                <Button x:Name="SaveButton" Content="Сохранить" 
                        Width="80" Height="30" Margin="5,0" 
                        Click="SaveButton_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</Window>